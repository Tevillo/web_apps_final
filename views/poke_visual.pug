each d in data
    a(href=`/dex?ID=${d.pid}`)
        div.card
            h5.card-title #{d.Name}
            img.card-img(src=`images/Pokemon Images DB/${d.Name}/${d.Name}_new.png`, alt=d.Name)
            ul.type-list
                case d.Type_1 
                    when "Fire"
                        li.type.fire-type fire
                    when "Water"
                        li.type.water-type water
                    when "Grass"
                        li.type.grass-type grass
                    when "Poison"
                        li.type.poison-type poison
                    when "Bug"
                        li.type.bug-type bug
                    when "Normal"
                        li.type.normal-type normal
                    when "Electric"
                        li.type.electric-type electric
                    when "Fighting"
                        li.type.fighting-type fighting
                    when "Psychic"
                        li.type.psychic-type psychic
                    when "Rock"
                        li.type.rock-type rock
                    default
                        li.type #{d.Type_1}
                                    ul.type-list
                case d.Type_2 
                    when "Fire"
                        li.type.fire-type fire
                    when "Water"
                        li.type.water-type water
                    when "Grass"
                        li.type.grass-type grass
                    when "Poison"
                        li.type.poison-type poison
                    when "Bug"
                        li.type.bug-type bug
                    when "Normal"
                        li.type.normal-type normal
                    when "Electric"
                        li.type.electric-type electric
                    when "Fighting"
                        li.type.fighting-type fighting
                    when "Psychic"
                        li.type.psychic-type psychic
                    when "Rock"
                        li.type.rock-type rock
                    default
                        li.type #{d.Type_2}